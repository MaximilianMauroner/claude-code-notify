{
  "name": "claude-input",
  "private": true,
  "workspaces": [
    "extension",
    "server"
  ],
  "scripts": {
    "build": "cd extension && bun run build && cd ../server && bun run build",
    "build:extension": "cd extension && bun run build",
    "build:server": "cd server && bun run build",
    "typecheck": "tsc --noEmit -p extension && tsc --noEmit -p server",
    "typecheck:extension": "tsc --noEmit -p extension",
    "typecheck:server": "tsc --noEmit -p server"
  }
}
